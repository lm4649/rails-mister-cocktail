<div class="wrapper" style= "display: flex; margin-top: 8px">
  <%= cl_image_tag @cocktail.photo.attached? ? @cocktail.photo.key : "https://source.unsplash.com/featured/?{cocktail}", alt: "#{@cocktail.name}", class: 'avatar-large' %>
  <span style='opacity:0'>//</span>
  <h1><%= @cocktail.name %></h1>
  <%= link_to cocktails_path do %>
      <i class="fas fa-undo-alt"></i>
  <% end %>
</div>
<br><br>
<div class="container">
  <div class="wrapper">
    <h2 class="text-muted">Ingredients List</h2>
    <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <span style='opacity:0'>//</span><i class="fas fa-plus-circle"></i>
    <% end %>
  </div>
  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
  <li class="list-group-item d-flex justify-content-between">
    <%= dose.ingredient.name %>: <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete, data: {confirm: "do you want to delete this dose?"}, class: 'badge badge-light' do   %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </li>
  <% end %>
  </ul>
  <br><hr><br>
  <div class="wrapper wrapper-v">
    <h2 class="text-muted">Add a Review</h2>
    <%= simple_form_for [@cocktail, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.button :submit, class: "btn-success" %>
    <% end %>
  </div>
  <br><hr><br>
  <h2 class="text-muted">Reviews</h2>
  <div class="wrapper wrapper-v">
    <% @reviews.each do |review| %>
       <div class="media text-muted pt-3">
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <%= "#{'⭐️' * review.rating } - #{review.content}" %>
          </p>
       </div>
    <% end %>
  </div>
</div>



